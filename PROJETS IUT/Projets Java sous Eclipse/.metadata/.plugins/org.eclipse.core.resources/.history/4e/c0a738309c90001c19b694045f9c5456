public class TestFizzBuzz {
	
	FizzBuzz f;

	@Before
	public void setUp() throws Exception {
		f = new FizzBuzz();
	}

	@After
	public void tearDown() throws Exception {
	}

	@Test
	public void testFizzBuzzInitial() {
		assertEquals("Fizz", f.getTab()[2]);
	}
	
	@Test
	public void testSize() {
		assertEquals(this.tab.length, 100);
	}
	
	@Test
	public void testMultiple3() {
		assertEquals(this.tab[2],"Fizz");
	}
	
	
	
}
